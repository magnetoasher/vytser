{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "es",
    "target": "es5",
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "es6",
      "scripthost",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
