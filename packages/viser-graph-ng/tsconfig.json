{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "es",
    "target": "es5",
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "strict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowJs": false,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": "src",
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "angularCompilerOptions": {
    "genDir": "es",
    "skipTemplateCodegen": true,
    "debug": false,
    "enableIvy": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}